#include "std_lib_facilities.hpp"

template <class T> class Number

{
	T value;

public:
	Number() : value(T()) { }
	Number(const Number& arg) : value(arg.value) { }
	Number(T val) : value(val) { }
	Number& operator=(const Number& val) { value = val.value; }
	T get() const { return value; }
};

template<class T>
Number<T> operator+(const Number<T>& val1, const Number<T>& val2)
{
	return Number<T>(val1.get() + val2.get());
}

template<class T>
Number<T> operator-(const Number<T>& val1, const Number<T>& val2)
{
	return Number<T>(val1.get() - val2.get());
}

template<class T>
Number<T> operator*(const Number<T>& val1, const Number<T>& val2)
{
	return Number<T>(val1.get() * val2.get());
}

template<class T>
Number<T> operator/(const Number<T>& val1, const Number<T>& val2)
{
	return Number<T>(val1.get() / val2.get());
}

template<class T>
Number<T> operator%(const Number<T>& val1, const Number<T>& val2)
{
	return Number<T>(val1.get() % val2.get());
}

template<class T>
ostream& operator<<(ostream& os, const Number<T>& d)
{
	os << d.get();
	return os;
}


