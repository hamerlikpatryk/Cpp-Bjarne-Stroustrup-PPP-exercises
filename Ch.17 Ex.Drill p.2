#include "std_lib_facilities.hpp"

using namespace std;

void print_arr (ostream & os, int * arg, int n) {
    for (int i = 0; i < n; ++i) os << arg[i] << " ";
    os << endl;
};

int main () {
    int * a = new int;
    *a = 7;
    int *p1 = a;
    cout << p1 << ": ";
    print_arr(cout,p1,1);
    int * b = new int[7];
    int n = 1;
    for (int i = 0; i < 7; ++i) {
        b[i] = n;
        n *= 2;
    }
    int *p2 = b;
    cout << p2 << ": ";
    print_arr(cout,p2,7);
    int * p3 = p2;
    p2 = p1;
    p1 = p3;
    cout << p1 << ": ";
    print_arr(cout,p1,7);
    delete[] p1;
    cout << p2 << ": ";
    print_arr(cout,p2,1);
    delete p2;
}
