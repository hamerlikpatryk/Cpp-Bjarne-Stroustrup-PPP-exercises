#include "std_lib_facilities.hpp"

int main()
{
	double val1, val2, result;
	char character;
	cout << "Please enter 1 value" << endl;
	cin >> val1;
	cout << "Please enter 2 value" << endl;
	cin >> val2;
	cout << "Please enter charakter, +,-,*,/" << endl;
	cin >> character; 
	if (character == '+')
	{
		result = val1 + val2;
		cout << "The sum of " << val1 << " and " << val2 << " is " << result;
	}
	else if (character == '-')
	{
		result = val1 - val2;
		cout << "The subtract of " << val1 << " and " << val2 << " is " << result;
	}
	else if (character == '*')
	{
		result = val1 * val2;
		cout << "The multiply of " << val1 << " and " << val2 << " is " << result;
	}
	else if (character == '/')
	{
		result = val1 / val2;
		cout << "The divide of " << val1 << " and " << val2 << " is " << result;
	}
	else
	{
		cout << "plese enter +,-,*,/ next time" << endl;
	}
}
